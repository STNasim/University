library(pacman)
p_load(tidyverse,ggplot2)
rm(list =ls())
gc()

data(mtcars)
head(mtcars)
summary(mtcars)
dim(mtcars)

ggplot(data=mtcars, aes(x=cyl)) +
  geom_histogram(fill="steelblue", color="black") +
  ylab("Frecuencia") +
  xlab("Cilindros") +
  ggtitle("Cantidad de vehiculos por n√∫mero de cilindros")

ggplot(data=mtcars, aes(x=hp, y=mpg, color=wt)) + 
  geom_point() +
  ylab("Millas/galon") +
  xlab("Caballos de fuerza") +
  labs (color = "Peso/1000 libras") +
  scale_color_gradient(low = "red", high = "black") +
  ggtitle("Millas/galon vs caballos de fuerza coloreados por peso")

mtcars$vs <- as.factor(mtcars$vs)

ggplot(data=mtcars, aes(x=vs, y=hp)) + 
  geom_boxplot(fill="steelblue") +
  ylab("Caballos de fuerza") +
  xlab("Tipo de motor") +
  scale_x_discrete(labels=c('Forma de V', 'Recto')) +
  ggtitle("Caballos de fuerza por tipo de motor")
